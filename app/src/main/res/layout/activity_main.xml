<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="widget" />

        <Button
            android:id="@+id/btn_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="launcher"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="permission"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_home_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home_press"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="acc"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speech_to_text"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_flatbuffers_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flatbuffers_map"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_window_mananger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="虚拟屏"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customview"
            android:visibility="visible" />

        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:visibility="visible" />

        <Button
            android:id="@+id/shortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="media notif" />

        <Button
            android:id="@+id/liveWallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="liveWallpaper" />

        <Button
            android:id="@+id/open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open camera" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>